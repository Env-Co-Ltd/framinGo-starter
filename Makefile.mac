BINARY_NAME=framinGo
## build_cli: builds the command line tool framingo
build_cli:
	@go build -o framinGo ./cmd/cli
build:
	@go mod vendor
	@echo "Building Framingo..."
	@go build -o tmp/${BINARY_NAME} .
	@echo "Framingo built!"

run: build
	@echo "Starting Framingo..."
	@./tmp/${BINARY_NAME} &
	@echo "Framingo started!"

clean:
	@echo "Cleaning..."
	@go clean
	@rm tmp/${BINARY_NAME}
	@echo "Cleaned!"

test:
	@echo "Testing..."
	@go test ./...
	@echo "Done!"

start: run

stop:
	@echo "Stopping Framingo..."
	@-pkill -SIGTERM -f "./tmp/${BINARY_NAME}"
	@echo "Stopped Framingo!"

restart: stop start